    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "demo.py",
            "console": "integratedTerminal",
            "args": [
                "--image-folder", "samples",
                "--exp-cfg", "data/conf.yaml",
                "--show", "True",
                "--output-folder", "out",
                "--save-params", "False",
                "--save-vis", "True",
                "--save-mesh", "True"
            ],
            "env": {
                "__PYOPENGL_PLATFORM": "egl",
                "_PYOPENGL_PLATFORM": "osmesa"
            }
        }
    ]
}